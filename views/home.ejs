<!DOCTYPE html>
<html>

<head>
    <title><%=title %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
        integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous" />
    <style>
        #github-input {
            min-width: 417px;
        }
    </style>
</head>

<body>
    <section class="container">
        <h2>Get Commits for Open Pull Requests</h2>
        <form class="form-inline" method="POST" action="/repo-open-prs">
            <div class="form-group">
                <label for="github-input">Please enter repo url</label>
                <input type="text" class="form-control" id="github-input" name="repo"
                    placeholder="Ex: https://github.com/mempool/mempool/" />
            </div>
            <button type="submit" class="btn btn-default">
                Submit
            </button>
        </form>
    </section>

    <% if(openPrs.length > 0){ %>
    <section class="container">
        <table class="table">
            <tr>
                <th>Username</th>
                <th>API PR Url</th>
                <th>Commits</th>
            </tr>
            <% for(var i=0; i < openPrs.length; i++) { %>
            <tr>
                <td><%= openPrs[i].user.login %></td>
                <td><%= openPrs[i].commitsUrl %></td>
                <td><%= openPrs[i].commits %></td>
            </tr>
            <% } %>
        </table>
    </section>
    <% } %>
</body>

</html>